<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.hit.hradar.domain.notice.query.mapper.NoticeCategoryMapper">

    <select id="findByCompany"
            resultType="org.hit.hradar.domain.notice.query.dto.response.NoticeCategoryResponse">
        SELECT
        category_id AS id,
        name
        FROM notice_category
        WHERE com_id = #{companyId}
        AND is_deleted != 'Y'
        ORDER BY name ASC
    </select>

</mapper>
