<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.hit.hradar.domain.evaluation.query.mapper.EvaluationTypeMapper">

    <select id="selectEvaluationTypesByCompanyId"
            parameterType="long"
            resultType="org.hit.hradar.domain.evaluation.query.dto.response.EvaluationTypeResponse">

        SELECT
        eval_type_id   AS evalTypeId,
        type_name      AS typeName
        FROM evaluation_type
        WHERE company_id = #{companyId}
        AND is_deleted = 'N'
        ORDER BY eval_type_id ASC

    </select>

</mapper>